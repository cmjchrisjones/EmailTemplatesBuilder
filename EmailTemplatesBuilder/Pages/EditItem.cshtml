@page
@model EmailTemplatesBuilder.Pages.EditItemModel
@{
}


<form method="post">
    <div asp-validation-summary="All">
        <span>Please correct the following errors</span>
    </div> 
    <h3>Editing <<em>@Model.Item.Name</em>></h3>
    <label asp-for="@Model.Item.ContentDescriptorId"></label>
    <select asp-for="@Model.Item.ContentDescriptorId" asp-items="@Model.Descriptors" class="form-control">
        <option value="">Pick one</option>
    </select>
    <br />
    <label asp-for="@Model.Item.Text"></label>
    <textarea asp-for="@Model.Item.Text"></textarea>
    <br />
    <label asp-for="@Model.Item.UpdatedBy"></label>
    <input asp-for="@Model.Item.UpdatedBy" />

    <input type="hidden" asp-for="@Model.Item.Name" />

    <input type="hidden" asp-for="@Model.Item.CreatedBy" />
    <input type="hidden" asp-for="@Model.Item.CreatedAt" />
    <input type="hidden" asp-for="@Model.Item.Id" />


    <input type="submit" value="Update Item" />
</form>